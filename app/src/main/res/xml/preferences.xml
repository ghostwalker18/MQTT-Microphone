<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/mqtt_settings">

        <EditTextPreference
            app:title="@string/server_address_option"
            app:key="server_address"/>

        <EditTextPreference
            app:title="@string/topic_name_option"
            app:key="topic_name"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/app_settings">

        <ListPreference
            app:title="@string/record_mode_option"
            app:key="record_mode"/>

        <ListPreference
            app:title="@string/language_option"
            app:key="language"/>

        <ListPreference
            app:title="@string/theme_option"
            app:key="theme"/>
    </PreferenceCategory>
</PreferenceScreen>